{
  "name": "core-service",
  "version": "1.0.0",
  "description": "Core backend service for the Event Ticketing System, managing user registration, authentication, event creation, and ticket booking.",
  "main": "server.ts",
  "scripts": {
    "test:unit": "mocha -r ts-node/register test/unit/**/*.test.ts",
    "test:integration" : "mocha --file ./test/integration/utils/globalSetup.ts -r ts-node/register test/integration/**/*.test.ts",
    "test:all": "npm run test:unit && npm run test:integration",
    "coverage": "nyc npm run test:all",
    "start": "npx nodemon",
    "migrate": "npx prisma migrate deploy",
    "lint": "npx eslint .",
    "format": "npx prettier --write '**/*.{js,ts,json,md}'"
  },
  "author": "Kristóf Bába",
  "license": "ISC",
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "test/**/*.test.ts"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "all": true,
    "check-coverage": true
  },
  "dependencies": {
    "@prisma/client": "^5.21.1",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^5.21.1",
    "winston": "^3.15.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@testcontainers/postgresql": "^10.13.2",
    "@types/bcrypt": "^5.0.2",
    "@types/chai": "^5.0.0",
    "@types/chai-as-promised": "^8.0.1",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/mocha": "^10.0.9",
    "@types/node": "^22.7.9",
    "@types/sinon": "^17.0.3",
    "@types/supertest": "^6.0.2",
    "chai": "^4.5.0",
    "chai-as-promised": "^7.1.2",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.11.0",
    "mocha": "^10.7.3",
    "nodemon": "^3.1.7",
    "nyc": "^17.1.0",
    "prettier": "^3.3.3",
    "sinon": "^19.0.2",
    "supertest": "^7.0.0",
    "testcontainers": "^10.13.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.11.0"
  }
}
