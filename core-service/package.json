{
  "name": "core-service",
  "version": "1.0.0",
  "description": "Core backend service for the Event Ticketing System, managing user registration, authentication, event creation, and ticket booking.",
  "main": "server.ts",
  "scripts": {
    "test:unit": "jest --config jest.config.ts",
    "test:integration": "jest --config jest.integration.config.ts --runInBand",
    "test:all": "npm run test:unit && npm run test:integration",
    "coverage:unit": "jest --config jest.config.ts --coverage",
    "coverage:integration": "jest --config jest.integration.config.ts --runInBand --coverage",
    "coverage:report": "jest --coverage --coverageDirectory=coverage/combined && open coverage/combined/lcov-report/index.html",
    "start": "npx nodemon",
    "migrate": "npx prisma migrate deploy",
    "lint": "npx eslint .",
    "format": "npx prettier --write '**/*.{js,ts,json,md}'"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "author": "Kristóf Bába",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.21.1",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^5.21.1",
    "winston": "^3.15.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@testcontainers/postgresql": "^10.13.2",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.7.9",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.11.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "testcontainers": "^10.13.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.11.0"
  }
}
